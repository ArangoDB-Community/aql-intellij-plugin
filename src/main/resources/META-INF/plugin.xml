<idea-plugin>
  <id>com.machak.aql</id>
  <name>AQL</name>
  <version>1.0</version>
  <vendor email="em@machak.com" url="https://www.machak.com">machak</vendor>

  <description><![CDATA[
      AQL (ArangoDB) language plugin (file support, syntax highlighting and autocompletion)
    ]]></description>

  <change-notes><![CDATA[
     1.0 initial release (basic coloring, autocompletion)
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="163"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <depends optional="true" config-file="aql-language.xml">org.intellij.intelliLang</depends>
  <extensions defaultExtensionNs="com.intellij">
    <!--
      //############################################
      // Language setup
      //############################################
    -->
    <fileTypeFactory implementation="com.machak.aql.file.AqlFileTypeFactory"/>

    <lang.parserDefinition language="aql" implementationClass="com.machak.aql.lang.AqlParserDefinition"/>
    <internalFileTemplate name="templates.Aql Template"/>
    <colorSettingsPage implementation="com.machak.aql.settings.AqlColorSettingsPage"/>
    <psi.referenceContributor implementation="com.machak.aql.lang.AqlPsiReferenceContributor"/>
    <lang.findUsagesProvider language="aql" implementationClass="com.machak.aql.lang.AqlFindUsagesProvider"/>
    <lang.documentationProvider language="aql" implementationClass="com.machak.aql.lang.AqlDocumentationProvider"/>
    <lang.syntaxHighlighterFactory language="aql" implementationClass="com.machak.aql.syntax.AqlSyntaxHighlighterFactory"/>
    <!--
    <codeStyleSettingsProvider implementation="com.simpleplugin.SimpleCodeStyleSettingsProvider"/>
    <langCodeStyleSettingsProvider implementation="com.simpleplugin.SimpleLanguageCodeStyleSettingsProvider"/>
    -->
    <codeStyleSettingsProvider implementation="com.machak.aql.syntax.AqlCodeStyleSettingsProvider"/>
    <langCodeStyleSettingsProvider implementation="com.machak.aql.syntax.AqlLanguageCodeStyleSettingsProvider"/>
    <annotator language="aql" implementationClass="com.machak.aql.syntax.AqlSyntaxHighlighterAnnotator"/>
    <lang.commenter language="aql" implementationClass="com.machak.aql.syntax.AqlCommenter"/>
    <completion.contributor language="aql" implementationClass="com.machak.aql.editor.AqlCodeCompletionContributor"/>
    <!--
      //############################################
      // Services
      //############################################
    -->
    <projectService serviceInterface="com.machak.aql.db.AqlDatabaseService" serviceImplementation="com.machak.aql.db.AqlDatabaseServiceImpl"/>
    <toolWindow id="ArangoDB" anchor="right" secondary="false" factoryClass="com.machak.aql.window.DataWindowFactory" icon="/icons/toolbarArangoDB.png"/>
    <toolWindow id="ArangoDB Console" anchor="bottom" secondary="false" factoryClass="com.machak.aql.window.ConsoleWindowFactory" icon="/icons/toolbarArangoDB.png"/>
    <annotator language="aql" implementationClass="com.machak.aql.editor.AqlAnnotator"/>
  </extensions>

  <actions>
      <action id="com.machak.aql.actions.AqlExecuteQueryAction" class="com.machak.aql.actions.AqlExecuteQueryAction" text="Execute AQL Query" description="Execute AQL Query">
        <add-to-group group-id="EditorPopupMenu.Run" anchor="first"/>
      </action>
    <action id="aql.NewAqlFile" class="com.machak.aql.file.AqlFileTemplateAction"
            text="AQL File" description="Create new AQL file">
      <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
    </action>

    <!-- com.machak.aql.actions.ActionBusEvent.ACTION_CONSOLE-->
    <group id="Aql.Action.Console" text="AQL Console">
      <action id="Aql.Action.Console.ExecuteQuery"
              class="com.machak.aql.actions.AqlExecuteQueryAction"
              text="Execute AQL query"
              icon="/toolwindows/toolWindowRun.png"
              description="Execute AQL query">
      </action>
      <action id="Aql.Action.Console.Clean"
              class="com.machak.aql.actions.AqlEmptyLogAction"
              text="Clear"
              icon="/actions/refresh.png"
              description="Clear">
      </action>
    </group>
  </actions>


  <application-components>
    <component>
      <implementation-class>com.machak.aql.window.DataWindowState</implementation-class>
    </component>
  </application-components>
  <project-components>
    <component>
      <implementation-class>com.machak.aql.window.DataWindowState</implementation-class>
    </component>
  </project-components>
</idea-plugin>